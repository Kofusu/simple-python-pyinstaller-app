node {
    stage("Build & Test") {
        try {
            sh 'apt-get update && apt-get install -y python3'
            sh "python3 sources/test_calc.py"
        } catch {
            echo "Error occurred during Build & Test: ${e.getMessage()}"
            error("Build & Test stage failed.")
        }
    }

    stage("Deploy") {
        echo "Not yet Implemented"
    }
}
